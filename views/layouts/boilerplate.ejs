<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restify</title>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom Font -->
    <link href="https://fonts.cdnfonts.com/css/amazon-ember" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">

    <!-- Rating CSS -->
    <link rel="stylesheet" href="/css/rating.css">

    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />


    <style>
        body {
            background-color: white;
            margin: 0;
            padding: 0;
            font-family: 'Amazon Ember', sans-serif;
        }

        /* Custom scrollbar styles */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: white;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #b99650;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #d1b275;
        }

        .container {
            padding: 20px;
        }

        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #fff;
            /* Background color */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            flex-direction: column;
        }

        #preloader-content {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #preloader-image {
            width: 120px;
            /* Larger image size */
            animation: spin 2s linear infinite, pulse 1.5s infinite alternate;
            margin-bottom: 20px;
            /* Spacing between image and text */
        }

        /* Welcome text styling */
        #preloader-text {
            font-size: 1.5rem;
            /* Larger text size */
            color: #46143c;
            /* Text color */
            font-weight: bold;
            text-align: center;
        }

        /* Spin animation */
        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Pulsating animation for glamorous effect */
        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }

            100% {
                transform: scale(1.2);
                opacity: 0.7;
            }
        }
    </style>
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="preloader-content">
            <img src="/images/favicon.png" alt="Preloader" id="preloader-image">
            <p id="preloader-text">Welcome to Restify!</p>
        </div>
    </div>

    <!-- Navbar -->
    <%- include("../includes/navbar.ejs") %>

        <!-- Main Container -->
        <div class="container">
            <%- body %>
        </div>

        <!-- Footer -->
        <%- include("../includes/footer.ejs") %>

            <!-- Bootstrap JS and Popper.js -->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>

            <!-- Custom Script -->
            <script src="/js/script.js"></script>

            <!-- Leaflet JS -->
            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>


            <!-- Auto-hide flash messages -->
            <script>
                setTimeout(function () {
                    const flashMessages = document.querySelectorAll('.flash-message');
                    flashMessages.forEach(function (message) {
                        message.style.display = 'none'; // Hide the message after 3 seconds
                    });
                }, 3000);
            </script>
            <script>
                window.addEventListener('load', function () {
                    const preloader = document.getElementById('preloader');
                    preloader.style.opacity = '0'; // Smooth fade-out
                    setTimeout(() => {
                        preloader.style.display = 'none';
                    }, 500); // Delay to let the fade-out complete
                });
            </script>


</body>

</html>