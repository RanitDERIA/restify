<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="container mt-1">
        <!-- Success Flash Message Section -->
        <% if (messages.success) { %>
            <div class="alert alert-success">
                <%= messages.success %>
            </div>
        <% } %>

        <h3 class="text-center mb-4">Edit Review</h3>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="/listings/<%= review.listing %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment:</label>
                        <textarea id="comment" name="review[comment]" class="form-control <%= messages.comment ? 'is-invalid' : '' %>" rows="4" required minlength="10" maxlength="500"><%= review.comment %></textarea>
                        <div class="invalid-feedback">
                            <% if (messages.comment) { %>
                                Comment should be longer than 10 characters and shorter than 500 characters.
                            <% } %>
                        </div>
                    </div>

                    <div class="mb-3 d-flex align-items-center">
                        <label for="rating" class="form-label me-3">Rate this review:</label>
                        <fieldset class="starability-heartbeat">
                            <legend class="visually-hidden">Rate this review</legend>
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" <%= review.rating === 1 ? 'checked' : '' %> />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" <%= review.rating === 2 ? 'checked' : '' %> />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" <%= review.rating === 3 ? 'checked' : '' %> />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" <%= review.rating === 4 ? 'checked' : '' %> />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" <%= review.rating === 5 ? 'checked' : '' %> />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <button type="submit" class="btn btn-success" style="background-color: #46143c; color: white; border-color: #46143c;">Update Review</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script>
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(function(message) {
                message.style.display = 'none'; // Hide the message after 3 seconds
            });
        }, 3000); // 3000 milliseconds = 3 seconds
    </script>
</body>

</html>
